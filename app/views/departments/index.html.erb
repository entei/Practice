<h1>Listing departments</h1>

<table>
  <tr>
    <th>Название </th>
    <th>Тип </th>
    <th>Район</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @departments.each do |department| %>
  <tr>
    <td><%= department.name %></td>
    <td><%= department.type %></td>
    <td><%= department.district_id %></td>
    <td><%= link_to 'Просмотр', department %></td>
    <td><%= link_to 'Редактировать', edit_department_path(department) %></td>
    <td><%= link_to 'Удалить', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

