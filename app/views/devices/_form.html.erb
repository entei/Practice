<%= form_for([:station, @device]) do |f| %>
    <% if @device.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@device.errors.count, "error") %> prohibited this device from being saved:</h2>

          <ul>
            <% @device.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :"Тип оборудования" %>
      <%= f.select :device_type, [['Стример'],
            ['Проектор'],
            ['Плазменная панель'],
            ['Кодоскоп'],
            ['ИБП до 1000 Вт'],
            ['ИБП свыше 1000 Вт']]%>
    </div>
    <div class="field">
      <%= f.label :"Модель" %>
      <%= f.text_field :device_model %>
    </div>
    <div class="field">
      <%= f.label :"Источник приобретения" %>
      <%= f.select :source, [['Республиканский бюджет'],
            ['Местный бюджет'],
            ['На балансе сторонней организации'],
            ['Передано безвозмездно'],
            ['Получено из других подразделений'],
            ['Спонсорские средства '],
            ['Платные услуги']]%>
      
    </div>
    <div class="field">
      <%= f.label :"Дата ввода в эксплуатацию" %>
      <%= f.date_select :commissioning %>
    </div>
    <div class="field">
      <%= f.label :"Какие задачи выполняет" %>
      <%= f.text_area :task %>
    </div>
    <div class="field">
      <%= f.label :"Дата списания" %>
      <%= f.date_select :decommissioning %>
    </div>
    <div class="field">
      <%= f.label :"Примечание" %>
      <%= f.text_area :comment %>
    </div>
    <div class="field">

      <%= f.hidden_field :station_id, :value => @station_id %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
