<h1>Listing modems</h1>

<% if @modems.any? %>
    modems
    <table class="table">
      <thead>
      <tr class="success">
        <th>Модель</th>
        <th>Тип модема</th>
        <th>ID станции</th>
      </tr>
      </thead>
      <tbody>

      <% @modems.each do |modem| %>
          <tr>
            <td><%= modem.model %></td>
            <td> <%= modem.modem_type %> </td>
            <td> <%= modem.station_id %> </td>
            <td> <%= link_to "просмотр", station_modem_path(@station, modem) %></td>
            <td><%= link_to "редактировать", edit_station_modem_path(@station, modem) %></td>
            <td><%= link_to "удалить", "#" %></td>
          </tr>
          </tbody>
      <% end %>
      </table>
<% end %>

